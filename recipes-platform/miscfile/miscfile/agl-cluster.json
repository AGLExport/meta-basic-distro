{
	"name": "agl-cluster",
	"base": {
		"autoboot": true,
		"bootpriority": 1,
		"rootfs": {
			"path": "/opt/container/guests/agl-cluster/rootfs",
			"blockdev": [
				"/dev/mmcblk1p2",
				"/dev/mmcblk0p2"
			]
		},
		"persistence": {
			"from": 	"/opt/container/guests/agl-cluster/nv",
			"to":		"var/nonvolatile",
			"blockdev": [
				"/dev/mmcblk1p7",
				"/dev/mmcblk0p7"
			]
		},
		"lifecycle": {
			"halt": "SIGRTMIN+3",
			"reboot": "SIGTERM"
		},
		"cap": {
			"drop": "sys_module mac_admin mac_override sys_time",
			"keep": ""
		},
		"environment": [
			"XDG_RUNTIME_DIR=/lxc/share",
			"LD_LIBRARY_PATH=/usr/lib:/lib",
			"HOME=/home/root"
		]
	},
	"resource": [
		{
			"type":		"cgroup",
			"object":	"cpuset.cpus",
			"value":	"1"
		}
	],
	"fs": {
		"mount": [
			{
				"type": 	"filesystem",
				"from": 	"shm",
				"to":		"/dev/shm",
				"fstype":	"tmpfs",
				"option": 	"defaults 0 0"
			},
			{
				"type": 	"directry",
				"from": 	"/sys/kernel/security",
				"to":		"sys/kernel/security",
				"fstype":	"none",
				"option": 	"ro,bind,optional 0 0"
			},
			{
				"type": 	"directry",
				"from": 	"/run/drm-lease-manager/lease-cluster",
				"to":		"var/display/drm-lease-manager/lease",
				"fstype":	"none",
				"option": 	"bind,create=file"
			}
		]
	},
	"device": {
		"static": [
			{
				"type": 		"devdir",
				"from": 		"/dev/dri",
				"to":			"dev/dri",
				"devnode":		"/dev/dri/card0",
				"optional": 		0,
				"wideallow": 	1,
				"exclusive": 	0
			},
			{
				"type": 		"devnode",
				"from": 		"/dev/pvr_sync",
				"to":			"dev/pvr_sync",
				"devnode":		"/dev/pvr_sync",
				"optional": 		0,
				"wideallow": 	0,
				"exclusive": 	0
			},
			{
				"type": 		"devnode",
				"from": 		"/dev/ttySC2",
				"to":			"dev/ttySC2",
				"devnode":		"/dev/ttySC2",
				"optional": 		1,
				"wideallow": 	0,
				"exclusive": 	1
			},
			{
				"type": 		"gpio",
				"port":			380,
				"direction":	"low",
				"from": 		"/sys/devices/platform/soc/e6055400.gpio/gpiochip6/gpio/gpio380",
				"to":			"sys/devices/platform/soc/e6055400.gpio/gpiochip6/gpio/gpio380"
			}
		]
	},
	"network": [
		{
			"type": 	"veth",
			"link": 	"lxcbr0",
			"flags":	"up",
			"hwaddr":	"00:16:3e:xx:xx:xx",
			"veth": {
				"mode": "bridge"
			},
			"ipv4": {
				"address":	"10.0.3.20/24",
				"gateway":	"10.0.3.1"
			},
			"ipv6": {
			}
		}

	]
}
